

@{
    ViewData["Title"] = "Restaurants";
}

<div class="container">
    <h1 class="mt-5">Restaurants</h1>
    @if (Model.Count == 0)
    {
        <p>No restaurants found.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var restaurant in Model)
                {
                    <tr>
                        <td>@restaurant.Name</td>
                        <td>@restaurant.Address</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@restaurant.Rid" class="btn btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@restaurant.Rid" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <a asp-action="Create" class="btn btn-success">Add Restaurant</a>
</div>
